<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@color/bg_btn_postfeed_attachment"
            android:orientation="horizontal">

            <vn.techres.supplier.view.TechResTextView
                android:id="@+id/txtNumberCount"
                android:layout_width="@dimen/dp40"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bg_btn_postfeed_attachment"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/padding_5dp"
                android:paddingVertical="@dimen/padding_7dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />


            <vn.techres.supplier.view.TechResTextView
                android:id="@+id/txtNameMaterial"
                android:layout_width="@dimen/dp120"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bg_btn_postfeed_attachment"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/padding_5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <vn.techres.supplier.view.TechResTextView
                android:id="@+id/txt_unit"
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bg_btn_postfeed_attachment"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/padding_5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <vn.techres.supplier.view.TechResTextView
                android:id="@+id/txt_number_of_orders"
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bg_btn_postfeed_attachment"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/padding_5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                android:textStyle="normal" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/out_of_stock"
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/btnOutOfStock"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_border_white_stroke_red_5dp"
                    android:gravity="center"
                    android:padding="@dimen/px4"
                    tools:ignore="UselessParent">

                    <vn.techres.supplier.view.TechResTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/out_of_stock"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_normal"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearEdit"
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">


                <EditText
                    android:id="@+id/input_number_of_orders"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_border_white_stroke_grey_5dp"
                    android:gravity="center"
                    android:hint="@string/not_data"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:padding="@dimen/padding_8dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="normal"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/btnEditAndBack"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginEnd="@dimen/margin_8dp"
                    android:background="@drawable/bg_oval"
                    android:backgroundTint="@color/color_main"
                    android:gravity="center"
                    android:padding="@dimen/padding_5dp"
                    android:visibility="gone"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="@dimen/dp10"
                        android:layout_height="@dimen/dp10"
                        android:src="@drawable/icon_pencil_white"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_out_of_stock"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_btn_order"
                    android:gravity="center"
                    android:padding="@dimen/px4"
                    android:visibility="gone"
                    tools:ignore="UselessParent">

                    <vn.techres.supplier.view.TechResTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/out_of_stock"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_normal"
                        android:textStyle="normal"
                        app:textAllCaps="false" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/linearEditPrice"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">


                <EditText
                    android:id="@+id/unitPriceInput"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_8dp"
                    android:background="@drawable/bg_border_white_stroke_grey_5dp"
                    android:gravity="center"
                    android:hint="@string/not_data"
                    android:inputType="numberDecimal"
                    android:maxLength="9"
                    android:padding="@dimen/padding_8dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="normal"
                    tools:ignore="Autofill" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_price"
                android:layout_width="@dimen/dp90"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/btnPrice"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_border_white_stroke_red_5dp"
                    android:gravity="center"
                    android:padding="@dimen/px4"
                    tools:ignore="UselessParent">

                    <vn.techres.supplier.view.TechResTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/out_of_stock"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_normal"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <vn.techres.supplier.view.TechResTextView
                android:id="@+id/total"
                android:layout_width="@dimen/dp90"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bg_btn_postfeed_attachment"
                android:gravity="center"
                android:padding="@dimen/padding_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <vn.techres.supplier.view.TechResTextView
                android:id="@+id/date_create"
                android:layout_width="@dimen/dp130"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bg_btn_postfeed_attachment"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/padding_5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                android:textStyle="normal" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white" />
    </LinearLayout>
</layout>