<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragment.restaurantcontactors.BranchFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px4"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:id="@+id/linearTotalBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_main"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dp16"
                android:paddingStart="@dimen/margin_8dp"
                android:visibility="gone"
                tools:ignore="RtlSymmetry">

                <vn.techres.supplier.view.TechResTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_branch_customer"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <vn.techres.supplier.view.TechResTextView
                    android:id="@+id/txtTotalBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_4dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_4dp">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>