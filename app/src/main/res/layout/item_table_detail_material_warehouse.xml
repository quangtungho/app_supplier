<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabview_item"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/px4"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <vn.techres.supplier.view.TechResTextView
            android:id="@+id/txtNumberCount"
            android:layout_width="@dimen/dp40"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tabview_item"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:paddingVertical="@dimen/padding_7dp"
            android:textColor="@color/text_tableviewitem"
            android:textSize="@dimen/text_size_10" />

        <View
            android:layout_width="@dimen/px4"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <vn.techres.supplier.view.TechResTextView
            android:id="@+id/txtNameMaterial"
            android:layout_width="@dimen/dp130"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tabview_item"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:textColor="@color/text_tableviewitem"
            android:textSize="@dimen/text_size_10" />

        <View
            android:layout_width="@dimen/px4"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <vn.techres.supplier.view.TechResTextView
            android:id="@+id/txtNumber"
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tabview_item"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:textColor="@color/text_tableviewitem"
            android:textSize="@dimen/text_size_10" />

        <View
            android:layout_width="@dimen/px4"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <vn.techres.supplier.view.TechResTextView
            android:id="@+id/txtUnits"
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tabview_item"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:textColor="@color/text_tableviewitem"
            android:textSize="@dimen/text_size_10" />

        <View
            android:layout_width="@dimen/px4"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <vn.techres.supplier.view.TechResTextView
            android:id="@+id/txtPrice"
            android:layout_width="@dimen/dp120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tabview_item"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:textColor="@color/text_tableviewitem"
            android:textSize="@dimen/text_size_10" />

        <View
            android:layout_width="@dimen/px4"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/btnEditAndBack"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:background="@drawable/bg_oval"
                android:backgroundTint="@color/color_main"
                android:gravity="center"
                android:padding="@dimen/padding_5dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="@dimen/dp13"
                    android:layout_height="@dimen/dp13"
                    android:src="@drawable/icon_pencil_white"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:background="@drawable/bg_oval"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:padding="@dimen/padding_5dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imgDeleteOrRestore"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:src="@drawable/picture_icon_delete"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/px4"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px4"
        android:background="@color/white" />
</LinearLayout>