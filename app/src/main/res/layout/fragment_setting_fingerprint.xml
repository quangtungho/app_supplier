<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".fragment.setting.SettingFingerprintFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"

            android:layout_marginTop="@dimen/margin_2dp"
            android:background="@drawable/click_menu_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp8"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <vn.techres.supplier.view.TechResTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/title_setting_fingerprint1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="normal"
                    tools:ignore="NestedWeights" />

                <vn.techres.supplier.view.TechResTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_setting_fingerprint2"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <com.bitvale.switcher.SwitcherX
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>