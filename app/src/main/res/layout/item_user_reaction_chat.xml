<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:layout_marginStart="@dimen/margin_8dp"
                android:scaleType="centerCrop" />

            <vn.techres.supplier.view.TechResTextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:maxWidth="180dp"
                android:maxLines="1" />

            <RelativeLayout
                android:id="@+id/revoke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/imgEmoji6"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginStart="@dimen/ayp_8dp"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone"
                        android:contentDescription="@string/default_image" />

                    <ImageView
                        android:id="@+id/imgEmoji5"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone"
                        android:contentDescription="@string/default_image" />

                    <ImageView
                        android:id="@+id/imgEmoji4"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone"
                        android:contentDescription="@string/default_image" />

                    <ImageView
                        android:id="@+id/imgEmoji3"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone"
                        android:contentDescription="@string/default_image" />

                    <ImageView
                        android:id="@+id/imgEmoji2"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone"
                        android:contentDescription="@string/default_image" />

                    <ImageView
                        android:id="@+id/imgEmoji1"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginEnd="@dimen/ayp_8dp"
                        android:visibility="gone"
                        android:contentDescription="@string/default_image" />

                    <TextView
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/ayp_8dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="@dimen/dp16"
            android:background="@color/black_text" />
    </LinearLayout>
</layout>
