<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_main"
        tools:context=".fragment.setting.SettingFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_main"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="42dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_main"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLanguageSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_menu_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_5dp">

                    <ImageView
                        android:layout_width="@dimen/icon_accountmenu_size"
                        android:layout_height="@dimen/icon_accountmenu_size"
                        android:layout_margin="@dimen/margin_8dp"
                        android:src="@drawable/ic_language"
                        tools:ignore="ContentDescription" />

                    <vn.techres.supplier.view.TechResTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/text_setting_language"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/font_normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:contentDescription="@string/default_image"
                        android:src="@drawable/ic_baseline_navigate_next_24" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_main" />

                <LinearLayout
                    android:id="@+id/linearNotifySetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_menu_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_5dp">

                    <ImageView
                        android:layout_width="@dimen/icon_accountmenu_size"
                        android:layout_height="@dimen/icon_accountmenu_size"
                        android:layout_margin="@dimen/margin_8dp"
                        android:src="@drawable/ic_notify"
                        tools:ignore="ContentDescription" />

                    <vn.techres.supplier.view.TechResTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/notify"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/font_normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:contentDescription="@string/default_image"
                        android:src="@drawable/ic_baseline_navigate_next_24" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_main" />

                <LinearLayout
                    android:id="@+id/linearFingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_menu_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_5dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/icon_accountmenu_size"
                        android:layout_height="@dimen/icon_accountmenu_size"
                        android:layout_margin="@dimen/margin_8dp"
                        android:src="@drawable/ic_fingerprint_setting"
                        tools:ignore="ContentDescription" />

                    <vn.techres.supplier.view.TechResTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:textColor="@color/black_2"
                        android:textSize="@dimen/font_normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:contentDescription="@string/default_image"
                        android:src="@drawable/ic_baseline_navigate_next_24" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>